<%-include('../cabecalho.ejs')%>
<h1>Adicionar Jogo</h1>
<div>
    <form method="post" enctype="multipart/form-data">
        <label>Nome:</label>
        <input type="text" name="nome" required>
        <br>
        <label>Gêneros:</label>
        <checklistbox name="generos" required>
            <% generos.forEach(function(genero) { %>
                <label>
                    <input type="checkbox" name="generos" value="<%= genero.nome %>">
                    <%= genero.nome %>
                </label>
            <% }); %>
        </checklistbox>
        <br>
        <label>Preço:</label>
        <input type="number" step="0.01" name="preco" required>
        <br>
        <label>Descrição:</label>
        <br>
        <textarea name="descricao" required></textarea>
        <br>
        <label>Memória RAM Mínima:</label>
        <input type="text" name="minRam" required>
        <br>
        <label>Armazenamento:</label>
        <input type="text" name="armazenamento" required>
        <br>
        <label>Poster:</label>
        <input type="file" name="poster" accept="image/*" required>
        <br>
        <label>Distribuidora:</label>
        <select name="distribuidora" required>
            <% distribuidoras.forEach(function(distribuidora) { %>
                <option value="<%= distribuidora._id %>"><%= distribuidora.nome %></option>
            <% }); %>
        </select>
        <br>
        <label>Desenvolvedora:</label>
        <select name="desenvolvedora" required>
            <% desenvolvedoras.forEach(function(desenvolvedora) { %>
                <option value="<%= desenvolvedora._id %>"><%= desenvolvedora.nome %></option>
            <% }); %>
        </select>
        <br>
        <label>Data de Lançamento:</label>
        <input type="date" name="dataDeLancamento" required>
        <br>
        <button type="submit">Adicionar</button>
    </form>
</div>
<%-include('../rodape.ejs')%>