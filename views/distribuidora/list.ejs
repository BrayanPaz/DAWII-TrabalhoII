<%-include('../cabecalho.ejs')%>
    <h1 class="mb-4">Distribuidoras</h1>

    <div class="mb-3">
        <form action="/distribuidora/list" method="post" class="d-flex">
            <input type="text" name="filtro" class="form-control me-2" placeholder="Filtrar por nome">
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Pesquisar</button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Website</th>
                    <th scope="col">País</th>
                    <th scope="col">Fundação</th>
                    <th scope="col">Logo</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <%for(const{nome, descricao, website, paisDeOrigem, dataDeFundacao, logo, id} of Distribuidoras){%>
                    <tr>
                        <td>
                            <%=nome%>
                        </td>
                        <td>
                            <%=descricao%>
                        </td>
                        <td><a href="<%=website%>" target="_blank">
                                <%=website%>
                            </a></td>
                        <td>
                            <%=paisDeOrigem%>
                        </td>
                        <td><%=dataDeFundacao.toLocaleDateString('pt-BR')%></td>
                        <td>
                            <img src="<%=logo%>" class="table-img" alt="Logo de <%=nome%>">
                        </td>
                        <td>
                            <a href="/distribuidora/edit/<%=id%>" class="btn btn-warning btn-sm mb-1" title="Editar">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a href="/distribuidora/delete/<%=id%>" class="btn btn-danger btn-sm mb-1" title="Excluir"
                                onclick="return confirm('Tem certeza?');">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
    <%-include('../rodape.ejs')%>