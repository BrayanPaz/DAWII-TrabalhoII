<%-include('../cabecalho.ejs')%>
    <h1 class="mb-4">Editar Distribuidora</h1>
    <div>
        <form method="post" enctype="multipart/form-data" action="/distribuidora/edit/<%=Distribuidora.id%>">
            
            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <input type="text" id="nome" name="nome" class="form-control" value="<%=Distribuidora.nome%>" required>
            </div>

            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição:</label>
                <textarea id="descricao" name="descricao" class="form-control" rows="3" required><%=Distribuidora.descricao%></textarea>
            </div>
    
        <div class="mb-3">
                <label for="website" class="form-label">Website:</label>
                <input type="url" id="website" name="website" class="form-control" value="<%=Distribuidora.website%>" required>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="paisDeOrigem" class="form-label">País de Origem:</label>
                    <input type="text" id="paisDeOrigem" name="paisDeOrigem" class="form-control" value="<%=Distribuidora.paisDeOrigem%>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="dataDeFundacao" class="form-label">Data de Fundação:</label>
                <input type="date" id="dataDeFundacao" name="dataDeFundacao" class="form-control" value="<%=Distribuidora.dataDeFundacao.toISOString().split('T')[0]%>" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="logo" class="form-label">Logo (deixe em branco para manter a atual):</label>
                <input type="file" id="logo" name="logo" class="form-control" accept="image/*">
            </div>
            
            <hr class="my-4">
            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> Salvar</button>
            <a href="/distribuidora/list" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
<%-include('../rodape.ejs')%>