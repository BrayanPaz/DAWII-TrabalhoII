<%- include('../cabecalho.ejs') %>

<div class="row">
    <div class="col-12 mb-4">
        <h1 class="display-5 fw-bold"><i class="bi bi-cart"></i> Seu Carrinho</h1>
    </div>
</div>

<% if(jogos.length === 0) { %>
    <div class="text-center py-5">
        <h3 class="text-muted">Seu carrinho está vazio.</h3>
        <a href="/loja/catalogo" class="btn btn-app-action mt-3" style="max-width: 200px;">Voltar ao Catálogo</a>
    </div>
<% } else { %>
    <div class="row">

        <div class="col-lg-8">
            <% for(const jogo of jogos) { %>
                <div class="card game-card mb-3 p-2 d-flex flex-row align-items-center">
                    <% if(jogo.poster) { %>
                        <img src="<%= jogo.poster %>" class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                    <% } %>
                    <div class="ms-3 flex-grow-1">
                        <h5 class="mb-1"><%= jogo.nome %></h5>
                        <small class="text-muted"><%= jogo.distribuidora.nome %></small>
                    </div>
                    <div class="text-end me-3">
                        <div class="fw-bold">R$ <%= jogo.preco.toFixed(2).replace('.', ',') %></div>
                        <a href="/loja/remover/<%= jogo._id %>" class="text-danger small text-decoration-none">
                            <i class="bi bi-trash"></i> Remover
                        </a>
                    </div>
                </div>
            <% } %>
        </div>

        <div class="col-lg-4">
            <div class="card game-card p-4">
                <h4>Resumo</h4>
                <hr>
                <div class="d-flex justify-content-between mb-3">
                    <span>Subtotal</span>
                    <span>R$ <%= total.toFixed(2).replace('.', ',') %></span>
                </div>
                <div class="d-flex justify-content-between fw-bold fs-5 mb-4">
                    <span>Total</span>
                    <span class="text-info">R$ <%= total.toFixed(2).replace('.', ',') %></span>
                </div>
                
                <form action="/loja/comprar" method="POST">
                    <button type="submit" class="btn btn-success w-100 py-2 fw-bold">
                        <i class="bi bi-credit-card"></i> Finalizar Compra
                    </button>
                </form>
                <a href="/loja/catalogo" class="btn btn-outline-light w-100 mt-2">Continuar Comprando</a>
            </div>
        </div>
    </div>
<% } %>

