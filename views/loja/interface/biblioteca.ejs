<%- include('../cabecalho.ejs') %>

<div class="row">
    <div class="col-12 mb-4">
        <h1 class="display-5 fw-bold"><i class="bi bi-collection-play"></i> Minha Biblioteca</h1>
        <p class="text-muted">Seus jogos adquiridos.</p>
    </div>
</div>

<% if(jogos.length === 0) { %>
    <div class="text-center py-5">
        <h3 class="text-muted">Você ainda não possui jogos.</h3>
        <a href="/loja/catalogo" class="btn btn-app-action mt-3" style="max-width: 200px;">Ir para a Loja</a>
    </div>
<% } else { %>
    <div class="row">
        <% for(const jogo of jogos) { %>
            <div class="col-6 col-md-3 col-lg-2 mb-4">
                <div class="card game-card h-100 text-center p-2 border-0 bg-transparent">
                    <div class="position-relative">
                        <% if(jogo.poster) { %>
                            <img src="<%= jogo.poster %>" class="img-fluid rounded shadow-lg hover-zoom" style="aspect-ratio: 2/3; object-fit: cover;">
                        <% } else { %>
                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="aspect-ratio: 2/3;">
                                <i class="bi bi-controller fs-1"></i>
                            </div>
                        <% } %>

                        <div class="position-absolute top-50 start-50 translate-middle">
                            <i class="bi bi-play-circle-fill text-white fs-1" style="opacity: 0.8; text-shadow: 0 0 10px black;"></i>
                        </div>
                    </div>
                    <h6 class="mt-2 text-white text-truncate"><%= jogo.nome %></h6>
                    <small class="text-success">Adquirido</small>
                </div>
            </div>
        <% } %>
    </div>
<% } %>

