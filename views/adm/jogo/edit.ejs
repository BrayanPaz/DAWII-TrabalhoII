<%-include('../cabecalho.ejs')%>
<h1 class="mb-4">Editar Jogo</h1>
<div>
    <form method="post" action="/jogo/edit/<%=Jogo.id%>" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%=Jogo.id%>" required readonly>

        <div class="mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" value="<%=Jogo.nome%>" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Gêneros:</label><br>
            <% generos.forEach(function(genero) { %>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="generos" value="<%= genero.nome %>" id="gen_<%= genero._id %>"
                        <%= Jogo.generos.includes(genero.nome) ? 'checked' : '' %>>
                    <label class="form-check-label" for="gen_<%= genero._id %>"><%= genero.nome %></label>
                </div>
            <% }); %>
    </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="preco" class="form-label">Preço (R$):</label>
                <input type="number" step="0.01" id="preco" name="preco" class="form-control" value="<%=Jogo.preco%>" required>
            </div>
        <div class="col-md-6 mb-3">
                <label for="dataDeLancamento" class="form-label">Data de Lançamento:</label>
                <input type="date" id="dataDeLancamento" name="dataDeLancamento" class="form-control" value="<%=Jogo.dataDeLancamento.toISOString().split('T')[0]%>" required>
            </div>
        </div>

        <div class="mb-3">
            <label for="descricao" class="form-label">Descrição:</label>
            <textarea id="descricao" name="descricao" class="form-control" rows="3" required><%=Jogo.descricao%></textarea>
        </div>

        <div class="row">
        <div class="col-md-6 mb-3">
                <label for="minRam" class="form-label">Memória RAM Mínima:</label>
                <input type="text" id="minRam" name="minRam" class="form-control" value="<%=Jogo.minRam%>" required>
            </div>
            <div class="col-md-6 mb-3">
                <label for="armazenamento" class="form-label">Armazenamento:</label>
                <input type="text" id="armazenamento" name="armazenamento" class="form-control" value="<%=Jogo.armazenamento%>" required>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="distribuidora" class="form-label">Distribuidora:</label>
                <select id="distribuidora" name="distribuidora" class="form-select" required>
                    <% distribuidoras.forEach(function(distribuidora) { %>
                        <option value="<%= distribuidora._id %>" <%= Jogo.distribuidora.equals(distribuidora._id) ? 'selected' : '' %>>
                            <%= distribuidora.nome %>
                        </option>
                    <% }); %>
            </select>
            </div>
            <div class="col-md-6 mb-3">
                <label for="desenvolvedora" class="form-label">Desenvolvedora:</label>
                <select id="desenvolvedora" name="desenvolvedora" class="form-select" required>
                    <% desenvolvedoras.forEach(function(desenvolvedora) { %>
                        <option value="<%= desenvolvedora._id %>" <%= Jogo.desenvolvedora.equals(desenvolvedora._id) ? 'selected' : '' %>>
                            <%= desenvolvedora.nome %>
                        </option>
                    <% }); %>
                </select>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="poster" class="form-label">Poster (deixe em branco para manter o atual):</label>
            <input type="file" id="poster" name="poster" class="form-control" accept="image/*">
        </div>
        
        <hr class="my-4">
        <button type="submit" class="btn btn-primary"><i class="bi bi-floppy-fill"></i> Salvar</button>
        <a href="/jogo/list" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
<%-include('../rodape.ejs')%>   